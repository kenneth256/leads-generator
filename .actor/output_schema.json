{
  "title": "Lead Data Output",
  "type": "object",
  "description": "Structured lead information from various platforms",
  "schemaVersion": 1,
  "properties": {
    "lead_id": {
      "type": "string",
      "description": "Unique identifier for the lead",
      "example": "github_12345"
    },
    "source": {
      "type": "string",
      "description": "Platform where the lead was found",
      "enum": ["github", "reddit", "devto", "hackernews", "producthunt"]
    },
    "name": {
      "type": "string",
      "description": "Full name or display name",
      "example": "John Doe"
    },
    "username": {
      "type": "string",
      "description": "Platform username",
      "example": "johndoe"
    },
    "profile_url": {
      "type": "string",
      "description": "URL to the profile page",
      "example": "https://github.com/johndoe"
    },
    "email": {
      "type": "string",
      "description": "Email address (when available)",
      "example": "john@example.com"
    },
    "bio": {
      "type": "string",
      "description": "Biography or description"
    },
    "company": {
      "type": "string",
      "description": "Company name",
      "example": "Acme Corp"
    },
    "location": {
      "type": "string",
      "description": "Geographic location",
      "example": "San Francisco, CA"
    },
    "website": {
      "type": "string",
      "description": "Personal or company website",
      "example": "https://example.com"
    },
    "avatar_url": {
      "type": "string",
      "description": "Profile picture URL"
    },
    "social_links": {
      "type": "object",
      "description": "Links to other social profiles",
      "properties": {
        "github": {"type": "string"},
        "twitter": {"type": "string"},
        "linkedin": {"type": "string"}
      }
    },
    "metadata": {
      "type": "object",
      "description": "Platform-specific metadata",
      "properties": {
        "followers": {"type": "number"},
        "following": {"type": "number"},
        "public_repos": {"type": "number"},
        "karma": {"type": "number"},
        "points": {"type": "number"},
        "comments": {"type": "number"},
        "tags": {"type": "array", "items": {"type": "string"}},
        "created_at": {"type": "string", "format": "date-time"}
      }
    },
    "lead_score": {
      "type": "number",
      "description": "Quality score from 1-10",
      "minimum": 1,
      "maximum": 10,
      "example": 8
    },
    "keyword": {
      "type": "string",
      "description": "Search keyword that found this lead",
      "example": "startup"
    },
    "scraped_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the lead was collected",
      "example": "2026-01-12T05:30:00.000Z"
    }
  },
  "required": ["lead_id", "source", "profile_url", "lead_score", "scraped_at"]
}
